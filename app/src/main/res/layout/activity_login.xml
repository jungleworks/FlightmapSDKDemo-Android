<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">
<RelativeLayout
    android:id="@+id/rl_logo"
    android:layout_marginTop="60dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_centerInParent="true"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:src="@mipmap/logo_splash">

    </ImageView>
</RelativeLayout>

    <LinearLayout
        android:padding="20dp"
        android:id="@+id/rl_logindetail"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_accesstoken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:hint="@string/add_accesstokenhere"
            android:background="@android:color/transparent"/>

        <View
            android:id="@+id/vw_login"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:id="@+id/rl_loginbttn"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/roundedcornerbttn">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textSize="14sp"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white">

            </TextView>
        </RelativeLayout>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tv_Dntaccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@color/appcolor"
            android:text="@string/donthaveaccesstoken">

        </TextView>
    </LinearLayout>
</RelativeLayout>